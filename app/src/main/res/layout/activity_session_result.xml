<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.application.parkinsonanalyser.SessionResult">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap-Count"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold"
                android:id="@+id/tap_heading"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of taps in 10 seconds."
                android:id="@+id/tap_desc"
                android:layout_below="@+id/tap_heading" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_below="@+id/tap_desc"
                android:id="@+id/tap_left"
                android:layout_marginTop="5dp"
                android:text="Left Hand: NA"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tap_desc"
                android:id="@+id/tap_right"
                android:layout_centerHorizontal="true"
                android:text="Right Hand: NA"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/tap_left"
                android:id="@+id/hline1"
                android:background="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tremor Test"
                android:layout_below="@+id/hline1"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:id="@+id/tremor_heading"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vibration in 10 seconds."
                android:id="@+id/tremor_desc"
                android:layout_below="@+id/tremor_heading" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tremor_desc"
                android:id="@+id/tremor_left"
                android:text="Left Hand: NA"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tremor_left"
                android:id="@+id/tremor_right"
                android:text="Right Hand: NA"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/tremor_right"
                android:id="@+id/hline2"
                android:background="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reaction Test"
                android:layout_below="@+id/hline2"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:id="@+id/reflex_heading"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average time to click 5 buttons."
                android:id="@+id/reflex_desc"
                android:layout_below="@+id/reflex_heading" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_below="@+id/reflex_desc"
                android:id="@+id/reflex_avg"
                android:layout_marginTop="5dp"
                android:text="Average Time (ms): NA"/>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
